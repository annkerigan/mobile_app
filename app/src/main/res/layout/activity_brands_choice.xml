<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:orientation="vertical"
    tools:context=".brands_choice">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="48dp"
                android:paddingTop="24dp"
                android:paddingRight="48dp">

                <TextView
                    android:id="@+id/cam_text_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="back" />

                <TextView
                    android:id="@+id/cam_text_skip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="skip"
                    android:textAlignment="textEnd" />
            </LinearLayout>

            <TextView
                android:id="@+id/cam_text_h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/neuemachina_bold"
                android:text="CHOOSE BRANDS YOU LIKE"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/brand"
                android:layout_width="328dp"
                android:layout_height="48dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/custom_input_4"
                android:drawableLeft="@drawable/search_svgrepo_com"
                android:drawablePadding="8dp"
                android:ems="10"
                android:inputType="text"
                android:paddingLeft="16dp"
                android:text="search your brand"
                android:textColor="#A0A0A0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:orientation="horizontal"
                tools:ignore="ExtraText">

                <ImageButton
                    android:id="@+id/brand_1"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="32dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_btn_brands"
                    app:srcCompat="@drawable/adidas_logo_svgrepo_com" />

                <ImageButton
                    android:id="@+id/brand_2"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginRight="32dp"
                    android:layout_marginBottom="32dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_btn_brands"
                    app:srcCompat="@drawable/gucci_logo_svgrepo_com" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/brand_3"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="32dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_btn_brands"
                    app:srcCompat="@drawable/balenciaga_logo_wine" />

                <ImageButton
                    android:id="@+id/brand_4"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginRight="32dp"
                    android:layout_marginBottom="32dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_btn_brands"
                    app:srcCompat="@drawable/off_white_logo_logo_svgrepo_com" />/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/brand_5"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="32dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_btn_brands"
                    app:srcCompat="@drawable/the_north_face_1_logo_svgrepo_com" />

                <ImageButton
                    android:id="@+id/brand_6"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginRight="32dp"
                    android:layout_marginBottom="32dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_btn_brands"
                    app:srcCompat="@drawable/vans_3_logo_svgrepo_com" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>