<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1D1D1D"
    tools:context=".cam">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="48dp"
            android:paddingTop="24dp"
            android:paddingRight="48dp">

            <TextView
                android:id="@+id/cam_text_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="back"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/cam_text_skip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="skip"
                android:textAlignment="textEnd"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <TextView
            android:id="@+id/cam_text_h"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/neuemachina_bold"
            android:lineSpacingExtra="34sp"
            android:text="TAKE A PICTURE THIS OUTFIT"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="34sp" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_marginTop="96dp"
            android:layout_weight="0"
            android:backgroundTint="#1D1D1D"
            app:srcCompat="@drawable/btn_cam" />

    </LinearLayout>

</LinearLayout>