<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="48dp"
        android:layout_weight="0"
        app:srcCompat="@drawable/star" />

    <TextView
        android:id="@+id/get_started"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_weight="0"
        android:fontFamily="@font/neuemachina_bold"
        android:text="LET` S GET STARTED"
        android:textColor="#000000"
        android:textSize="28sp" />

    <LinearLayout
        android:layout_width="316dp"
        android:layout_height="192dp"
        android:layout_marginTop="24dp"
        android:layout_weight="0"
        android:orientation="vertical">

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/custom_input"
            android:ems="10"
            android:fontFamily="@font/work_sans"
            android:inputType="text"
            android:paddingLeft="16dp"
            android:text="username"
            android:textColor="#808080"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/custom_input_2"
            android:ems="10"
            android:fontFamily="@font/work_sans"
            android:inputType="text"
            android:paddingLeft="16dp"
            android:text="e-mail"
            android:textColor="#808080"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/custom_input_2"
            android:ems="10"
            android:fontFamily="@font/work_sans"
            android:inputType="text"
            android:paddingLeft="16dp"
            android:text="password"
            android:textColor="#808080"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/confirm_password"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/custom_input_3"
            android:ems="10"
            android:fontFamily="@font/work_sans"
            android:inputType="text"
            android:paddingLeft="16dp"
            android:text="confirm password"
            android:textColor="#808080"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="316dp"
        android:layout_height="20dp"
        android:layout_marginTop="24dp"
        android:layout_weight="0"
        android:gravity="left"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/checkbox" />

        <TextView
            android:id="@+id/privacy_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="0"
            android:text="accept privacy policy and term of use" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="48dp"
        android:layout_weight="0"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_continue"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:fontFamily="@font/work_sans"
            android:textColor="@android:color/black"
            android:typeface="normal"
            app:cornerRadius="0dp"
            app:iconPadding="0dp"
            android:text="continue"
            android:textAllCaps="false"
            android:background="@drawable/custom_btn"/>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:fontFamily="@font/work_sans"
            android:text="login"
            app:cornerRadius="0dp"
            app:iconPadding="0dp"
            android:textAllCaps="false"
            android:background="@drawable/custom_btn"/>

        <Button
            android:id="@+id/btn_login_f"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/custom_btn"
            android:fontFamily="@font/work_sans"
            android:text="login with facebook"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:typeface="normal"
            app:cornerRadius="0dp"
            app:iconPadding="0dp" />

        <Button
            android:id="@+id/btn_login_g"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/custom_btn"
            android:fontFamily="@font/work_sans"
            android:text="login with google"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:typeface="normal"
            app:cornerRadius="0dp"
            app:iconPadding="0dp" />

    </LinearLayout>
</LinearLayout>